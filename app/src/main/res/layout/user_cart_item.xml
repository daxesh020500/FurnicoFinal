<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardMaxElevation="10dp">
    android:elevation="4dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_user_cart_item_decrease"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"
            app:layout_constraintStart_toEndOf="@+id/tv_user_cart_item_no_of_products"
            app:layout_constraintTop_toTopOf="@+id/tv_user_cart_item_no_of_products" />

        <ImageView
            android:id="@+id/iv_user_cart_item_product_image"
            android:layout_width="142dp"
            android:layout_height="137dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.232"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_user_cart_item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="196dp"
            android:layout_marginLeft="196dp"
            android:layout_marginTop="16dp"
            android:text="Product Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_user_cart_item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="196dp"
            android:layout_marginLeft="196dp"
            android:layout_marginTop="24dp"
            android:text="Category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_cart_item_product_name" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="19dp"
            android:layout_height="25dp"
            android:layout_marginStart="324dp"
            android:layout_marginLeft="324dp"
            android:layout_marginTop="68dp"
            android:text="$"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_user_cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="68dp"
            android:hint="Price"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bt_user_cart_item_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="112dp"
            android:layout_marginLeft="112dp"
            android:text="+"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_user_cart_item_product_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.81" />

        <TextView
            android:id="@+id/tv_user_cart_item_no_of_products"
            android:layout_width="42dp"
            android:layout_height="39dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="1"
            app:layout_constraintStart_toEndOf="@+id/bt_user_cart_item_add"
            app:layout_constraintTop_toTopOf="@+id/bt_user_cart_item_add" />

        <Button
            android:id="@+id/btn_user_cartitem_removeitem"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Remove"
            app:backgroundTint="#F44336"
            app:layout_constraintEnd_toStartOf="@+id/bt_user_cart_item_add"
            app:layout_constraintHorizontal_bias="0.562"
            app:layout_constraintStart_toEndOf="@+id/iv_user_cart_item_product_image"
            app:layout_constraintTop_toTopOf="@+id/bt_user_cart_item_add" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>